<?xml version="1.0" encoding="utf-8"?>
<com.nordeck.lib.core.views.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:foreground="?attr/selectableItemBackground"
                                                   android:gravity="center"
                                                   android:minHeight="@dimen/nd_default_touch_large"
                                                   android:orientation="horizontal"
                                                   android:padding="@dimen/nd_padding">

    <ImageView
        android:id="@+id/list_item_related_article_iv"
        android:layout_width="@dimen/related_article_iv_width"
        android:layout_height="@dimen/related_article_iv_width"
        android:layout_marginRight="@dimen/nd_padding"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_related_article_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Related Article Name"/>

        <TextView
            android:id="@+id/list_item_related_article_tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah"/>
    </LinearLayout>

</com.nordeck.lib.core.views.ForegroundLinearLayout>