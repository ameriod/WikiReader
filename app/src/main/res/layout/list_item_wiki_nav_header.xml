<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/list_item_wiki_nav_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wiki_detail_min_image_height"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/list_item_wiki_nav_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_item_wiki_nav_iv"
        android:layout_gravity="center"
        android:background="@color/background_text_on_pic"
        android:padding="@dimen/nd_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        tools:text="Fallout Wiki"/>
</RelativeLayout>